<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:scaleY="1.05"
    android:layout_height="match_parent"
    tools:context=".view.fragment.auth.AuthOptionsFragment">

        <TextView
            android:textSize="24sp"
            android:layout_marginHorizontal="25dp"
            android:textColor="@color/white"
            android:layout_above="@id/btnGoogle"
            android:fontFamily="@font/libre_franklin"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in" />

        <Button
            android:id="@+id/btnGoogle"
            android:backgroundTint="@color/app_color"
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:layout_above="@id/btnPhone"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="25dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:padding="15dp"
            android:layout_height="wrap_content"
            android:text="@string/via_google" />

        <Button
            android:id="@+id/btnPhone"
            android:textColor="@color/white"
            android:layout_marginHorizontal="25dp"
            android:backgroundTint="@color/app_color"
            android:layout_above="@id/tvSkip"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:padding="15dp"
            android:layout_height="wrap_content"
            android:text="@string/via_phone_number" />

    <TextView
        android:id="@+id/tvSkip"
        android:textSize="20sp"
        android:layout_marginHorizontal="25dp"
        android:drawablePadding="4dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        android:fontFamily="@font/libre_franklin"
        android:layout_marginBottom="38dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

</RelativeLayout>